{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".gitgnore",
			"biome.json",
			"package.json",
			"package-lock.json",
			"svelte.config.js",
			"README.md",
			"tsconfig.app.json",
			"tsconfig.json",
			"tsconfig.node.json",
			".vscode/",
			"node_modules/",
			"src/main.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
